{
    "name": "heyday/silverstripe-elastica",
    "description": "Provides Elastic Search integration for SilverStripe DataObjects using Elastica",
    "type": "silverstripe-vendormodule",
    "homepage": "http://github.com/heyday/silverstripe-elastica",
    "keywords": [
        "silverstripe",
        "search",
        "elasticsearch",
        "elastica"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Andrew Short",
            "email": "andrewjshort@gmail.com"
        },
        {
            "name": "Marcus Nyeholt",
            "email": "marcus@silverstripe.com.au"
        },
        {
            "name": "Glenn Bautista",
            "email": "glenn@vinta.tech"
        },
        {
            "name": "Ben Dubuisson",
            "email": "ben.dubuisson@heyday.co.nz"
        }
    ],
    "support": {
        "issues": "http://github.com/heyday/silverstripe-elastica/issues"
    },
    "require": {
        "php": ">=7.2",
        "ruflin/elastica": "^7",
        "symbiote/silverstripe-queuedjobs": "^4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Heyday\\Elastica\\": "src/",
            "Heyday\\Elastica\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.2.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
